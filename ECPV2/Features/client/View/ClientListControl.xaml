<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.client.View.ClientListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des Clients" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ListView MinHeight="400" 
                      ItemsSource="{Binding Clients, Mode=TwoWay}" 
                      SelectedItem="{Binding ClientSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        
                            <TextBlock>
                                <Run Text="{Binding Nomuser}" />
                            </TextBlock>
                       
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>