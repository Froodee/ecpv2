<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.client.View.ClientEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="12" MaxWidth="500">
            <TextBlock Text="Fiche Client" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- ID (désactivé) -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="ID :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Iduser, Mode=TwoWay}" 
                         IsEnabled="false" Background="#f0f0f0"/>
            </StackPanel>

            <!-- Nom -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Nom :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Nomuser, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- Adresse -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Adresse :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Adruser, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- Code Postal -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Code Postal :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Cpuser, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- Ville -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Ville :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Villeuser, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- Téléphone -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Téléphone :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Numuser, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- SIRET (spécifique au Client) -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="SIRET :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Siret, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>

            <!-- Commandes du client (équivalent des consultations/RDV) 
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Commandes du client" FontWeight="Bold" FontSize="14"/>
                <ListView ItemsSource="{Binding Commandes}" 
                          SelectedItem="{Binding CommandeSelected, Mode=TwoWay}"
                          MaxHeight="200" Margin="0,10,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="{Binding Idcommande}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Datecommande}"/>
                                <TextBlock Text="{Binding Montanttotal}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>-->
        </StackPanel>
    </ScrollViewer>
</UserControl>