<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.produit.View.ProduitListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des Produits" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ListView MinHeight="400"
                      ItemsSource="{Binding Produits, Mode=TwoWay}"
                      SelectedItem="{Binding ProduitSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <TextBlock Text="{Binding Libpds}" Width="150"/>
                            <TextBlock Text="{Binding Prixpds, StringFormat='{0:F2} â‚¬'}" Width="80"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
