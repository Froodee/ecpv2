<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.avis.View.AvisListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des Avis" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ListView MinHeight="400"
                      ItemsSource="{Binding AvisList, Mode=TwoWay}"
                      SelectedItem="{Binding AvisSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock>
                                <Run Text="Ref: " FontWeight="Bold"/>
                                <Run Text="{Binding Refpds}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Commentaire: " FontWeight="Bold"/>
                                <Run Text="{Binding Commentaire}" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
