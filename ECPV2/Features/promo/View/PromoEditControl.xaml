<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.promo.View.PromoEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="12" MaxWidth="500">
            <TextBlock Text="Fiche Promo" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- ID (désactivé) -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="ID Promo :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PromoSelected.Idpromo, Mode=TwoWay}"
                         IsEnabled="False" Background="#f0f0f0"/>
            </StackPanel>

            <!-- Date de début -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Date Début :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PromoSelected.Datedeb, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"
                         PlaceholderText="YYYY-MM-DD"/>
            </StackPanel>

            <!-- Date de fin -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Date Fin :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PromoSelected.Datefin, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"
                         PlaceholderText="YYYY-MM-DD"/>
            </StackPanel>

            <!-- Réduction -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Réduction (%) :" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding PromoSelected.Reduc, Mode=TwoWay}"
                         IsEnabled="{Binding IsEditable}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
