<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ECPV2.Features.promo.View.PromoListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des Promos" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ListView MinHeight="400"
                      ItemsSource="{Binding Promos, Mode=TwoWay}"
                      SelectedItem="{Binding PromoSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBlock>
                                <Run Text="ID: " FontWeight="Bold"/>
                                <Run Text="{Binding Idpromo}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="RÃ©duction: " FontWeight="Bold"/>
                                <Run Text="{Binding Reduc}" />
                                <Run Text="%" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
